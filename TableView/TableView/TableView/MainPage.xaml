<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TableView.MainPage">

    <StackLayout>
        <Button Text="Click" x:Name="bt1"/>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Ring">
                    <SwitchCell Text="Nuevo correo de voz"/>
                    <SwitchCell Text="Nuevo mensaje" On="True"/>
                </TableSection>
                <TableSection Title="Info">
                    <SwitchCell Text="Info"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>

</ContentPage>
